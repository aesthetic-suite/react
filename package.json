{
  "private": true,
  "name": "aesthetic-react-root",
  "version": "0.0.0",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "packemon build --addEngines",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration=standard",
    "clean": "packemon clean",
    "coverage": "yarn run jest --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "jest": "beemo jest --use-projects",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run pack && yarn test",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "posttest": "yarn run lint"
  },
  "engines": {
    "node": ">=10.3.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.17.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "benchmark": "^2.1.4",
    "builtin-modules": "^3.2.0",
    "conventional-changelog-beemo": "^2.1.0",
    "eslint-plugin-rut": "^2.0.0",
    "jest-rut": "^2.0.0",
    "lerna": "^4.0.0",
    "packemon": "^0.15.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rut-dom": "^2.0.0"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      {
        "driver": "babel",
        "strategy": "none"
      },
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "buildFolder": "dts",
        "declarationOnly": true
      }
    ],
    "settings": {
      "decorators": true,
      "react": true
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
