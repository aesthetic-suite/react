{
  "name": "aesthetic-react",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo create-config babel --esm --silent && rollup --config",
    "clean": "rm -rf ./packages/*/{lib,esm,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run clean && yarn run build && yarn test",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "posttest": "yarn run lint"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.14.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "benchmark": "^2.1.4",
    "builtin-modules": "^3.1.0",
    "conventional-changelog-beemo": "^2.0.0",
    "eslint-plugin-rut": "^2.0.0",
    "jest-rut": "^2.0.0",
    "lerna": "^3.22.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.35.1",
    "rollup-plugin-node-externals": "^2.2.0",
    "rut-dom": "^2.0.0"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "declarationOnly": true
      }
    ],
    "settings": {
      "decorators": true,
      "react": true
    },
    "eslint": {
      "extends": [
        "plugin:rut/recommended"
      ]
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ],
      "testEnvironment": "jsdom"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "ie 11"
  ]
}
